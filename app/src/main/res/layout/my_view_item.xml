<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="timelineitem"
            type="com.dev.prateekk.timeline.TimelineItemModel" />
    </data>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <TextView
            android:id="@+id/top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@{timelineitem.topTitle}"
            android:textColor="#17b96e"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mid_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_title"
            android:layout_centerHorizontal="true"
            android:text="@{timelineitem.midTitle}"
            android:textColor="#4c5054"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_down"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/mid_title"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_chevron" />
    </RelativeLayout>

</layout>
